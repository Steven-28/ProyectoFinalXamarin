<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ventas.Vistas.ActualizarClientePage">
    <StackLayout>
        <Label Text="Actualizar Cliente"
               HorizontalOptions="Center"
               FontSize="Large" />
        <Entry x:Name="txtIdCliente"
               Placeholder="id"
               TextColor="Black"
               PlaceholderColor="Black"
               FontSize="Large"
               IsVisible="False" />
        <Entry Text="{Binding NombreCliente}"
               x:Name="txtNombre" />
        <Entry Text="{Binding ApellidoCliente}"
               x:Name="txtApellido" />
        <Button Text="Guardar Cambios"
                x:Name="BtnGuardarCambios"
                Clicked="BtnGuardarCambios_Clicked" />
    </StackLayout>
</ContentPage>